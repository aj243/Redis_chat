<h1>Chat</h1>

<ul id="chat">
  <%= render @messages %>
</ul>
<div id="user_id" value="<%=current_user.subscribed_channel[:channel]%>" name="<%=current_user.name%>" class='hidden_values'>test</div>
<%= form_for Message.new, remote: true do |f| %>
	<%= f.label :name, "#{current_user.name}" %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>
